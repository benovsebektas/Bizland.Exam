@using Bizland.Models;
@model List<Team>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                <a asp-controller="Team" asp-action="Create" type="button" class="btn btn-primary">Create</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                               ImagePath
                            </th>
                            <th>
                               Name
                            </th>
                            <th>
                               Description
                            </th>
                            
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                             <tr>
                            <td class="py-1">
                                <img src="~/assets/img/team/@item.ImagePath" alt="image">
                            </td>
                            <td>
                              @item.Name
                            </td>
                            
                            <td>
                               @item.Description
                            </td>
                            <td>
                                    <a asp-route-id="@item.Id" asp-controller="Team" asp-action="Update" type="button" class="btn btn-primary">Update</a>
                                    <a asp-action="Delete"asp-route-id="@item.Id" type="button" class="btn btn-secondary">Delete</a>
                            </td>
                          
                        </tr>
                        }

                       
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
